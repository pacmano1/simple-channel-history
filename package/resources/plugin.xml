<pluginMetaData path="simple-channel-history">
    <name>Simple Channel History</name>
    <author>Diridium Technologies Inc.</author>
    <pluginVersion>${project.version}</pluginVersion>
    <mirthVersion>${plugin.supported.mc.versions}</mirthVersion>
    <url>https://diridium.com</url>
    <description>Plugin for tracking version history of Channels and CodeTemplates.</description>

    <serverClasses>
        <string>com.diridium.ChannelVersionController</string>
        <string>com.diridium.CodeTemplateVersionController</string>
    </serverClasses>

    <clientClasses>
        <string>com.diridium.ChannelHistoryPlugin</string>
        <string>com.diridium.CodeTemplateHistoryPlugin</string>
        <string>com.diridium.DeletedItemsSettingsPanelPlugin</string>
    </clientClasses>

    <migratorClass>com.diridium.HistoryMigrator</migratorClass>

    <sqlMapConfigs>
        <entry>
            <string>all</string>
            <string>sqlmap.xml</string>
        </entry>
    </sqlMapConfigs>

    <library type="CLIENT" path="java-diff-utils-4.12.jar" />

    <library type="SERVER" path="simple-channel-history-server-${project.version}.jar" />
    <library type="SHARED" path="simple-channel-history-shared-${project.version}.jar" />
    <library type="CLIENT" path="simple-channel-history-client-${project.version}.jar" />

    <apiProvider type="SERVLET_INTERFACE" name="com.diridium.ChannelHistoryServletInterface" />

    <apiProvider type="SERVER_CLASS" name="com.diridium.ChannelHistoryServlet" />
</pluginMetaData>
